{
  "name": "mcp-todo-server",
  "version": "1.0.0",
  "description": "MCP Server for Team Todo Management with projects, assignments, role-based access, and a built-in Web UI dashboard",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-todo-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "web": "node dist/web-server.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "todo",
    "task-management",
    "project-management",
    "claude",
    "ai-tools"
  ],
  "author": "devbyanuwat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devbyanuwat/mcp-todo-server.git"
  },
  "homepage": "https://github.com/devbyanuwat/mcp-todo-server#readme",
  "bugs": {
    "url": "https://github.com/devbyanuwat/mcp-todo-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "public/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
